                    @Html.DisplayFor(modelItem => item.Fab_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Square_footage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project_description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Scope)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditFactoryProject", new { id = item.Factory_request_id }) |
                    @Html.ActionLink("Details", "DetailsFactoryProject", new { id = item.Factory_request_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Factory_request_id })
                </td>
            </tr>
        }

    </table>
    @{int x = (Int32)Session["UserType"]; }

    @if (x == 3)
    {
        <div>
            @Html.ActionLink("Back", "AdminConsole", "User")
        </div>
    }
    else
    {
        <div>
            @Html.ActionLink("Back", "PmManagerConsole", "User")
        </div>
    }
