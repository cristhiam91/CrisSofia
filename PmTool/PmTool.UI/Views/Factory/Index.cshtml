                <td>
                    @Html.DisplayFor(modelItem => item.Site_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project_phase)
                </td>
